@model IEnumerable<Students.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>All the Students</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Student Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SlackHandle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CohortId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SlackHandle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CohortId)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
